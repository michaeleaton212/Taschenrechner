<Window x:Class="Taschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taschenrechner" MinHeight="400" MinWidth="180"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Display" 
                 Grid.Row="0" 
                 FontSize="32" 
                 Margin="0,0,0,0" 
                 IsReadOnly="True" 
                 HorizontalAlignment="Stretch"
                 VerticalContentAlignment="Center" TextAlignment="Right" />

        <Grid Grid.Row="1">

            <!-- jeweilige höhe jder zeile -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <!-- jeweilige breite jder zeile -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>


            </Grid.ColumnDefinitions>

            <Button Content="M+" Grid.Row="1" Grid.Column="0" Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="M-" Grid.Row="1" Grid.Column="1" Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="MS" Grid.Row="1" Grid.Column="2" Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="←" Grid.Row="1"  Grid.Column="3" Margin="3" MinWidth="20" MinHeight="30"/>


            <Button Content="7" Grid.Row="2" Grid.Column="0"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="/" Grid.Row="2" Grid.Column="3"  Margin="3" MinWidth="20" MinHeight="30"/>

            <Button Content="4" Grid.Row="3" Grid.Column="0"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="5" Grid.Row="3" Grid.Column="1"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="6" Grid.Row="3" Grid.Column="2"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="*" Grid.Row="3" Grid.Column="3"  Margin="3" MinWidth="20" MinHeight="30"/>

            <Button Content="1" Grid.Row="4" Grid.Column="0"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="2" Grid.Row="4" Grid.Column="1"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="3" Grid.Row="4" Grid.Column="2"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="-" Grid.Row="4" Grid.Column="3"  Margin="3" MinWidth="20" MinHeight="30"/>

            <Button Content="AC" Grid.Row="5" Grid.Column="0" Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="0" Grid.Row="5" Grid.Column="1"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="." Grid.Row="5" Grid.Column="2"  Margin="3" MinWidth="20" MinHeight="30"/>
            <Button Content="+" Grid.Row="5" Grid.Column="3"  Margin="3" MinWidth="20" MinHeight="30"/>

            <Button Content="=" Grid.Row="6" Grid.Column="3"  Margin="3" MinWidth="20" MinHeight="30"/>
        </Grid>
    </Grid>
</Window>
